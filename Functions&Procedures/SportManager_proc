const sql = require('mssql');

const addNewMatch = async(
        hostClub, 
        guestClub,
        startTime,
        endTime
) => {
    const request = new sql.Request();
    request.input('host_club_name',sql.VarChar,hostClub);
    request.input('guest_club_name',sql.VarChar,guestClub);
    request.input('start_time',sql.DateTime,startTime);
    request.input('end_time',sql.DateTime,endTime)
    return request.execute('addNewMatch');
}


const deleteMatch = async(
    hostClub, 
    guestClub,
    startTime,
    endTime
) => {
    const request = new sql.request
    request.input('host_club_name',sql.VarChar,hostClub);
    request.input('guest_club_name',sql.VarChar,guestClub);
    request.input('start_time',sql.DateTime,startTime);
    request.input('end_time',sql.DateTime,endTime)
    return request.execute('deleteMatchForSportManager');
}

const upcomingMatches = async() => {
    const request = new sql.request
    return request.execute('upcomingMatches');
}


const alreadyPalyedMatches = async() => {
    const request = new sql.request
    return request.execute('alreadyPlayedMatches');
}

const clubsNeverScheduled = async() => {
    const request = new sql.request
    return request.execute('clubsNeverScheduled');
}

module.exports = {
    addNewMatch,
    deleteMatch,
    upcomingMatches,
    alreadyPalyedMatches,
    clubsNeverScheduled
};


